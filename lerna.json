{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "0.1.0",
  "npmClient": "yarn",
  "npmClientArgs": ["--pure-lockfile"],
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": "next"
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "allowBranch": "release",
      "access": "public"
    }
  }
}
